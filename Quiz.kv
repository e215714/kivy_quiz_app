<BoxLayout>:
    spacing: 5
    padding: [5, 5, 5, 5]

<Label>:
    color: 0,0,0,1

<Button>:
    color: 1,1,1,1
    margin: ["10%", "10%", "10%", "10%"]

<MButton@Button>:
    ripple_color: 0, 0, 0, .2
    background_color: 0, 0, 0, 0
    color: 0.12941176470588237, 0.5882352941176471, 0.9529411764705882, 1

    canvas.before:
        Color:
            rgba: root.color
        Line:
            width: 2
            rectangle: (self.x, self.y, self.width, self.height)

<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: [20, 20, 20, 20]
        Label:
            size_hint: (1, 3)
            font_size: 100
            text: "プログラミングクイズ"
        MButton:
            text: "Start"
            font_size: 100
            on_press: app.controller.on_start()

<QuizScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: (1, 2)
            text: root.text
        BoxLayout:
            size_hint: (1, 1)
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                padding: [0,0,0,0]
                Button:
                    text: root.selection[0]
                    on_press: app.controller.on_select(1)
                Button:
                    text: root.selection[1]
                    on_press: app.controller.on_select(2)
            BoxLayout:
                orientation: "horizontal"
                padding: [0,0,0,0]
                Button:
                    text: root.selection[2]
                    on_press: app.controller.on_select(3)
                Button:
                    text: root.selection[3]
                    on_press: app.controller.on_select(4)

<AnswerScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: (1, 1)
            text: root.judge
        Label:
            size_hint: (1, 3)
            text: root.text
        Button:
            size_hint: (1, 1)
            text: "Next"
            on_press: app.controller.on_next()

<ResultScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: [20, 20, 20, 20]
        Label:
            size_hint: (1, 3)
            text: root.text
        MButton:
            size_hint: (1, 1)
            font_size: 80
            text: "はじめに戻る"
            on_press: app.controller.on_restart()
        MButton:
            size_hint: (1, 1)
            font_size: 80
            color: "red"
            text: "Exit"
            on_press: app.stop()